{
  "name": "config-base-gulp",
  "version": "0.1.0",
  "description": "Configuracion basica de gulp para monitorizar cambios y tareas.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "install": "npm install -g gulp",
    "src": "mkdir -p src src/js src/css src/images",
    "dist": "mkdir -p dist dist/js dist/css dist/images",
    "create": "npm run src && npm run dist && npm run gulp",
    "build": "gulp build:js build:css build:img",
    "start": "npm run build && gulp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alver23/config-gulp.git"
  },
  "keywords": [
    "gulp",
    "config",
    "base"
  ],
  "author": "Alver Grisales <viga.23@hotmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Alver23/config-gulp/issues"
  },
  "homepage": "https://github.com/Alver23/config-gulp#readme",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.9.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^2.0.7",
    "gulp-concat-css": "^2.2.0",
    "gulp-image-optimization": "^0.1.3",
    "gulp-minify-css": "^1.2.4",
    "gulp-rename": "^1.2.2",
    "gulp-size": "^2.1.0",
    "gulp-standard": "^7.0.1",
    "gulp-stylus": "^2.3.1",
    "gulp-uglify": "^1.5.3",
    "nib": "^1.1.0",
    "standard": "^7.0.1",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  }
}
